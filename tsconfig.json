{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@client/*": ["client/*"],
      "@server/*": ["server/*"],
      "@config/*": ["config/*"],
      "@user/*": ["user/*"],
      "@customer/*": ["customer/*"],
      "@product/*": ["product/*"],
      "@purchase/*": ["purchase/*"],
      "@category/*": ["category/*"],
    }
  },
  "include": ["src/**/*"]
}
